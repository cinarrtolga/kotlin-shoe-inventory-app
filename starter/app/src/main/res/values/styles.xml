<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginMailField">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
    </style>

    <style name="loginPasswordField">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="appButton">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="generalTitle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="generalDescription">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="itemAreaStyle">
        <item name="android:background">@drawable/bgdark_radius</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="labelStyle">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="inputStyle">
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
    </style>
</resources>
